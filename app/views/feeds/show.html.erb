<% content_for :title do %>
  <% unless @unread_stories.empty? %>
    <%= "(#{@unread_stories.count})" %>
  <% end %>
<% end %>

<div id="action-bar">
  <%= render "feeds/single_feed_action_bar", { stories: @unread_stories } %>
</div>

<div id="feed-title">
  <%= @feed.name %>
</div>

<%= render "stories/js", { stories: @stories } %>

<div id="stories">
  <ul id="story-list">
  </ul>
</div>
