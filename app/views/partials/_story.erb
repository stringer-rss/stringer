<% if story.is_read %>
  <li class="story read" id="story-<%= story.id%>" data-id="<%= story.id %>">
<% else %>
  <li class="story" id="story-<%= story.id%>" data-id="<%= story.id %>">
<% end %>
    <div class="row-fluid story-preview">
      <div class="span3">
        <p class="blog-title">
          <%= story.source %>
        </p>
      </div>
      <div class="span9">
        <p class="story-details">
          <span class="story-title">
            <%= story.headline %>
          </span>
          <span class="story-lead">
            &mdash; <%= story.lead %>
          </span>
        </p>
      </div>
    </div>


    <div class="story-body-container" class="row-fluid" style="display: none;">
      <div class="story-body">
        <h1><a href="<%=story.permalink %>"><%= story.title %></a></h1>
        <%= story.body %>
      </div>
      <div class="row-fluid story-actions-container">
        <div class="pull-left">
          <span class="story-published">
            <%= I18n.l(story.published) %>
          </span>
        </div>
        <div class="pull-right story-actions">
          <a class="story-keep-unread" href="#">
            <i class="icon-check"></i> Keep unread
          </a>
          <a class="story-permalink" href="<%= story.permalink %>">
            <i class="icon-external-link"></i>
          </a>
        </div>
      </div>
    </div>
  </li>